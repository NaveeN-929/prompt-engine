# Autonomous Financial Analysis Agent Configuration Template
# Copy this file to .env and update the values

# Prompt Engine Integration
PROMPT_ENGINE_HOST=localhost
PROMPT_ENGINE_PORT=5000

# LLM Configuration
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
OLLAMA_MODEL=llama2

# Optional: OpenAI Configuration (for fallback)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Optional: Anthropic Configuration (for fallback)  
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Vector Database Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=autonomous_agent_knowledge

# Agent Configuration
MAX_REASONING_STEPS=10
MIN_CONFIDENCE_THRESHOLD=0.7
ENABLE_FACT_CHECKING=true
ENABLE_CROSS_VALIDATION=true

# Response Validation
RESPONSE_MAX_LENGTH=5000
REQUIRE_CONFIDENCE_SCORES=true
REQUIRE_SOURCE_CITATIONS=true

# Learning and Adaptation
ENABLE_LEARNING=true
LEARNING_FEEDBACK_THRESHOLD=0.8
MAX_INTERACTION_HISTORY=1000

# Flask Server Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5001
FLASK_DEBUG=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=autonomous_agent.log

# Anti-Hallucination Configuration
CONFIDENCE_CALCULATION_METHOD=ensemble
UNCERTAINTY_QUANTIFICATION=true